<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_receipt">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <div>
                    <p t-esc="o.user_id.company_id.name"/>
                    Cliente: <div t-field="o.partner_id"/>
                </div>
                <h1 t-field="o.name"/>
                Vendedor: <span t-field="o.user_id"/><br/>
                Fecha: <span t-field="o.date_order"/><br/>
                <p t-field="o.note"/>

                <table class="table table-condensed" style="font-size:x-small">
                    <thead>
                        <tr>
                            <th>Descripci√≥n</th>
                            <th class="text-right">Cantidad</th>
                            <th class="text-right">Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="line">
                            <td><span t-field="line.product_id.name"/></td>
                            <td class="text-right">
                                <t t-if="o.state != 'cancel'">
                                    <span t-field="line.product_uom_qty"/>
                                </t>
                            </td>
                            <td class="text-right">
                                <t t-if="o.state != 'cancel'">
                                    <span t-esc="line.price_subtotal"/>
                                </t>
                                <t t-if="line.discount != 0.0">
                                    <span t-esc="line.discount"/>
                                </t>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-xs-6 pull-right">
                        <table class="table table-condensed" style="font-size:x-small">
                            <tr class="border-black">
                                <td><strong>IVA</strong></td>
                                <td class="text-right">
                                    <strong t-esc="o.amount_tax"/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <strong t-esc="o.amount_total"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
           </div>
        </t>
    </t>
</template>
</data>
</openerp>
